<div class= "container">
  <div class= "row mt-4">
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2> 
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Opinion</th>
            <th>Comment count</th>
            <th>Favorite count</th>
            <th>View count</th>
            <th>Star</th>
            <th>Tag</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td style="width: 100px;">
              <%= link_to  user_path(book.user.id) do %>
                <%= image_tag book.user.get_image(100,100) %>
              <% end %>
            </td>
            <td style="word-break: break-word;"><%= link_to book.title, book_path(book.id) %></td> 
            <td style="word-break: break-word;"><%= book.body %></td>
            <td><%= book.book_comments.count %></td>
            <td><%= render 'favorites/btn', book: book %></td>
            <td><%= book.view_counts.count %></td>
            <td><%= render "books/static_rate", book: book %></td>     
            <td>            
              <% if book.category.present? %>
                <%= link_to book.category, tag_searches_search_path(content: book.category) %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center">
        <%= paginate @books %>
      </div>
    </div>
  </div>
</div>

