<div class="container">
  <div class="row mt-4">
    <div class="col-md-8 offset-md-2">
      <h2><%= @group.name %>のNew notification</h2>

      <%= form_with model: [@group, @group_message], local: true do |f| %>
        <% if @group_message.errors.any? %>
          <div id="error_explanation">
            <h3><%= @group_message.errors.count %>件のエラーがあります</h3>
            <ul>
              <% @group_message.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.label :title, "Title" %><br>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :body, "Opinion" %><br>
          <%= f.text_area :body, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "Submit", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>